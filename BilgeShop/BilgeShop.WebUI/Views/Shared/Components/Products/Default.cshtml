@model List<ProductViewModel>

<div class="row">

    @if (Model.Any()) // Model.Count != 0
    {
        
        @foreach (var product in Model)
        {

            <div class="col-sm-12 col-md-4 col-lg-3 mb-3">

                <div class="card shadow-sm" style="height:400px">
                    
                    <div class="card-header" style="width:100%">

                        @if(!string.IsNullOrWhiteSpace(product.ImagePath))
                        {
                            <img style="width:100%; height:225px" src="~/images/products/@product.ImagePath" />
                        }
                        else
                        {
                            <img style="width:100%; height:225px" src="~/images/noImage.jpg" />
                        }
                            
                            

                        </div>


                    <div class="card-body">
                        <p class="card-text fw-bold">@product.Name</p>
                        <p class="card-text fw-bold text-danger">@product.UnitPrice TL</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="product" asp-action="Detail" asp-route-id="@product.Id" class="btn btn-sm btn-outline-success">İncele</a>                           
                            </div>
                            <small class="text-body-secondary">@product.CategoryName</small>
                        </div>
                    </div>
                </div>


            </div>
        }

    }
    else
    {
        <div class="alert alert-danger">

            Bu kategoride ürün yok!

            </div>
    }




</div>